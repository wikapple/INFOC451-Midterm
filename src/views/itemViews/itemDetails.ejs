<link rel="stylesheet" href="/css/item-details.css">


<%- include('partials/deleteItemModal.ejs') %>
    <%- include('partials/updateItemModal.ejs') %>
        <%- include('partials/qrCodeModal.ejs') %>

            <div class="container">
                <div class="py-2 text-center">
                    <h1 id="title">Rental Item Details</h1>
                    <p class="text-center lead">
                        <%=viewModel.rentalItem.rentalItemGuid%>
                    </p>
                </div>
            </div>
            <div class="container summary-container">
                <div class="row py-3">
                    <div class="col-md-4 order-md-2">
                        <div class="row justify-content-center">
                            <div class="mb-3 dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                                    id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                    <i class="fa-solid fa-wrench"></i> Edit
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <div class="row justify-content-center">
                                        <div class="col-12">
                                            <button class="btn btn-outline-info mb-2" id="edit-item-btn"
                                                data-toggle="modal" data-target="#update-item-modal"
                                                style="display: block;">
                                                <i class="fa-solid fa-pen-to-square"></i> Edit Item
                                            </button>
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-outline-danger delete-item-btn block"
                                                id="delete-media-btn" data-toggle="modal"
                                                data-target="#delete-confirmation-modal" style="display: block;">
                                                <i class="fa-solid fa-trash"></i> Delete Item
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 justify-content-center text-center mb-3">
                                <button class="btn btn-outline-info show-media-btn" id="diplay-qrcode-btn"
                                    data-toggle="modal" data-target="#display-qrcode-modal">
                                    <i class="fa-solid fa-qrcode"></i> Show QR-Code
                                </button>
                            </div>
                            <div class="col-12 justify-content-center text-center mb-3">
                                <button class="btn btn-outline-success show-media-btn" id="diplay-qrcode-btn"
                                    data-toggle="modal" data-target="#display-qrcode-modal">
                                    <i class="fa-solid fa-arrow-turn-up"></i> Check Out
                                </button>
                            </div>
                            <div class="col-12 justify-content-center text-center mb-3">
                                <button class="btn btn-outline-success show-media-btn" id="diplay-qrcode-btn"
                                    data-toggle="modal" data-target="#display-qrcode-modal">
                                    <i class="fa-solid fa-arrow-turn-down"></i> Check In
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 order-md-1">
                        <div class="row align-items-center">
                            <div class="col-md-4 col-lg-3">
                                Copy of:
                            </div>
                            <div class="col-md-8 detail-text mb-2">
                                <a href="<%=" /media/"+viewModel.rentalItem.id%>"><%=viewModel.rentalItem.name%></a>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-md-4 col-lg-3">
                                Item Type:
                            </div>
                            <div class="col-md-8 detail-text mb-2">
                                <%=viewModel.rentalItem.itemType%>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-md-4 col-lg-3">
                                Item Copy Number:
                            </div>
                            <div class="col-md-8 detail-text mb-2">
                                <%=viewModel.rentalItem.rentalItemGuid%>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-md-4 col-lg-3">
                                Is on hold?
                            </div>
                            <div class="col-md-8 detail-text mb-2">
                                <%=viewModel.rentalItem.isOnHold? "Yes" : "No" %>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-md-4 col-lg-3">
                                Condition:
                            </div>
                            <div class="col-md-8 detail-text mb-2">
                                <%=viewModel.rentalItem.copyCondition%>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container copies-container py-4">
                    <div class="row mb-2">
                        <div class="col text-center">
                            <h4>Transaction History of Copy: <%=viewModel.rentalItem.rentalItemGuid%>
                            </h4>
                        </div>
                    </div>
                    <table class="table table-bordered" id="transaction-history-table">
                        <thead>
                            <tr>
                                <th scope="col">Rental Date</th>
                                <th scope="col">Return Date</th>
                                <th scope="col">Member</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (!viewModel?.tansactions || viewModel?.transactions?.length==0) { %>
                                <tr>
                                    <td colspan="4" class="text-center">No transaction history</td>
                                </tr>
                                <%} %>

                        </tbody>
                    </table>
                </div>
            </div>
            <script src="/js/item-details.js"></script>