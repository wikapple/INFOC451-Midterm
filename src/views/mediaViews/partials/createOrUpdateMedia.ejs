<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create or Update Media</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="create-or-update-form" action="media/book" method="POST" class="book-modal-content">
                    <input type="hidden" id="id" name="id" value="0">
                    <div class="form-group">
                        <label for="item-type-modal-selector">Media Type: </label>
                        <select id="item-type-modal-selector" name="type" class="form-control form-control-sm"
                            aria-label="size 3 select example">
                            <option selected>Open this select menu</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="title" class="col-form-label">Title:</label>
                        <input type="text" required type="text" class="form-control" name="name" id="title">
                    </div>
                    <div class="form-group">
                        <label for="author" class="col-form-label">Author:</label>
                        <input required type="text" class="form-control" name="author" id="author"></input>
                    </div>
                    <div class="form-group">
                        <label for="publisher" class="col-form-label">Publisher:</label>
                        <input type="text" required class="form-control" name="publisher" id="publisher"></input>
                    </div>
                    <div class="form-group">
                        <label for="serial-number" class="col-form-label">ISBN or ID:</label>
                        <input type="text" required class="form-control" name="uniqueIdentifier"
                            id="serial-number"></input>
                    </div>
                    <div class="form-group">
                        <label for="page-count" class="col-form-label">Page count or size:</label>
                        <input type="number" required class="form-control" name="size" id="page-count"></input>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isChildSafe" id="child-safe">
                            <label class="form-check-label" for="child-safe">Is child safe? </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-form-label">Description:</label>
                        <textarea required class="form-control" name="description" id="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="categories-modal-selector">Categories</label>
                        <select class="form-control" name="categories[]" id="categories-modal-selector" multiple>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="submit-create-or-update-modal-btn" type="button" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>