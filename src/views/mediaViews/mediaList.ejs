<link rel="stylesheet" href="/css/media-list.css">
<div class="container"><h2 class="pb-2 border-bottom">Media Management</h2></div>

<div class="container">
    <div class="row align-items-end">
        <div class="col-2">
            <label for="item-type-selector">Media Type: </label>
            <select id="item-type-selector" class="form-control form-control-sm"
                aria-label="size 3 select example">
                <option selected>Open this select menu</option>
            </select>
        </div>
        <div class="col-8">
        <div class="input-group">
            <input id="search-media-input" class="form-control" type="text" placeholder="Search Field">
            <div class="input-group-append">
                <button id="search-btn" type="submit" class="btn btn-outline-primary"><i
                        class="fa-solid fa-magnifying-glass"></i></button>
                <button id="clear-search-btn" type="reset" class="btn btn-outline-danger"><i class="fa-solid fa-x"></i></button>
            </div>
            </div>
        </div>
        <div class="col-1">
            <button class="btn btn-primary btn-rounded">Add Item <i class="fa-solid fa-plus"></i></button>
        </div>
    </div>
</div>
<div class="container">
    <table id="media-table" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Publisher</th>
                <th scope="col">Categories</th>
                <th scope="col">available/total</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<script src="/js/media-list-view.js"></script>