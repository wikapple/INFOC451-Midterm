<link rel="stylesheet" href="/css/member-listView.css">
<div class="container">
    <h2 class="pb-2 border-bottom"><i class="fa-solid fa-users"></i> Member Management</h2>
</div>

<div class="container">
    <div class="row align-items-center justify-content-center mb-3">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 mb-2">
            <div class="input-group">
                <input id="search-member-input" class="form-control" type="text" placeholder="Search Field">
                    <button id="search-btn" type="submit" class="btn btn-outline-primary"><i
                            class="fa-solid fa-magnifying-glass"></i></button>
                    <button id="clear-search-btn" type="reset" class="btn btn-outline-danger"><i
                            class="fa-solid fa-x"></i></button>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <table id="member-table" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Email</th>
                <th scope="col">Account Status</th>
                <th scope="col">Fees due?</th>
                <th scope="col">No. items checked out</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
<script src="/js/member-listView.js"></script>